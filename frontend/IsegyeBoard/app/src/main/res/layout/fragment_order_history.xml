<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".room_history.OrderHistory">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@color/white"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/menuHistoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음료주문목록"
            android:textSize="40sp"
            android:fontFamily="@font/jua"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/emptyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문리스트가 비어 있습니다."
            android:textSize="70sp"
            android:fontFamily="@font/jua"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menuHistoryRV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/historyGuideline"
            app:layout_constraintTop_toBottomOf="@+id/menuHistoryTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="10dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            android:layout_margin="20dp"
            android:id="@+id/historyGuideline"/>

        <TextView
            android:id="@+id/gameHistoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보드게임 주문목록"
            android:textSize="40sp"
            android:fontFamily="@font/jua"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/historyGuideline"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gameHistoryRV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/historyGuideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuHistoryTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>