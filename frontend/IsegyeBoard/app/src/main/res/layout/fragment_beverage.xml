<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".beverage.Beverage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/beverageGuideLine">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/buttonCoffee"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonDrink"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/textCoffee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Coffee"
                android:textSize="45sp"
                android:textAlignment="center"
                >
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/buttonDrink"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonSnack"
            app:layout_constraintStart_toEndOf="@id/buttonCoffee"
            android:background="#5E412F"
            >
            <TextView
                android:id="@+id/textDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Drink"
                android:textSize="45sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                >
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/buttonSnack"
            app:layout_constraintStart_toEndOf="@id/buttonDrink"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#5E412F"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/textSnack"
                android:text="Snack"
                android:textSize="45sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                >
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menuListRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/buttonCoffee"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            android:layout_margin="0dp"
            tools:listitem="@layout/layout_menu_item"
            android:padding="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/beverageGuideLine"
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cartLogo"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="#FCEBB6"
        app:layout_constraintStart_toEndOf="@+id/beverageGuideLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/basket">
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/beverageGuideLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cartLogo"
        app:layout_constraintBottom_toTopOf="@id/cartPrice"
        android:background="#FFFFFF"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:id="@+id/cartDeleteButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:fontFamily="@font/jua"
        app:layout_constraintStart_toEndOf="@id/beverageGuideLine"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:text="비우기"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:background="#5E412F"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/cartPrice"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:fontFamily="@font/jua"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/orderButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="원"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/orderButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="@font/jua"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cartDeleteButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="주문하기"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:background="#FCEBB6"
        android:textSize="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>