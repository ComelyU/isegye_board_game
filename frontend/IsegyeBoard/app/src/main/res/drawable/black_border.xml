<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리를 검은색으로 설정 -->
    <stroke
        android:width="4dp"
        android:color="#000000" />

    <!-- 원의 내부 색상을 투명으로 설정 -->
    <solid
        android:color="#00000000" />

    <!-- Padding 설정 (원의 크기를 조절하기 위해 사용) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

</shape>